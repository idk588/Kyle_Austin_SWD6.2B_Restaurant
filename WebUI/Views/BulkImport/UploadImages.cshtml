@{
    ViewData["Title"] = "Upload Images ZIP & Commit";
}

<div class="container mt-4">

    <h2 class="mb-3">Upload Images ZIP &amp; Commit</h2>

    <p class="text-muted">
        Upload the ZIP file that you downloaded earlier (containing folders
        <code>R-1, R-2, M-1, ...</code>) after replacing each <code>default.jpg</code>
        with a real image. The system will save these images in
        <code>wwwroot/images</code>, link them to the corresponding restaurants or menu
        items, and commit everything to the database.
    </p>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <div>@error.ErrorMessage</div>
                }
            }
        </div>
    }

    <form asp-controller="BulkImport"
          asp-action="Commit"
          method="post"
          enctype="multipart/form-data"
          class="mt-3">

        <div class="mb-3">
            <label class="form-label">Select edited ZIP file</label>
            <input type="file"
                   name="zipFile"
                   class="form-control"
                   accept=".zip"
                   required />
        </div>

        <button type="submit" class="btn btn-primary">
            Upload ZIP &amp; Commit to Database
        </button>
    </form>

    <div class="mt-3">
        <a asp-controller="BulkImport"
           asp-action="BulkImport"
           class="btn btn-secondary">
            Back to JSON Import
        </a>
    </div>
</div>
