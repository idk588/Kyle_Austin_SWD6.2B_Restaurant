@{
    ViewData["Title"] = "Bulk Import";
}

<div class="container mt-4">

    <h2 class="mb-3">Bulk Import JSON File</h2>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">

            <p class="text-muted">
                Upload a <strong>.json</strong> file containing Restaurants and Menu Items.
                The data will be validated and stored temporarily in memory
                (as required in <strong>AA2.3</strong> before committing to database).
            </p>

            <form asp-action="BulkImport" asp-controller="BulkImport"
                  method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label">Select JSON File</label>
                    <input type="file" name="jsonFile" class="form-control" accept=".json" required />
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload"></i> Import
                </button>
            </form>

        </div>
    </div>

    <div class="mt-4">
        <a href="/Items/Catalog" class="btn btn-secondary">
            View Imported Items
        </a>
    </div>

</div>
