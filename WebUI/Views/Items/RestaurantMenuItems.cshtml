@model IEnumerable<Domain.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container mt-4">
    <h2>Approved Menu Items</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.Price.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Items"
       asp-action="Catalog"
       class="btn btn-secondary">
        Back to Restaurants
    </a>
</div>

