@using Domain.Interfaces
@using Domain.Models
@model IEnumerable<IItemValidating>

@{
    ViewData["Title"] = "Imported Items (Pending)";
    var viewMode = (string?)ViewBag.ViewMode ?? "cards";    // "cards" or "list"
}

<div class="container mt-4">
    <h2>Imported Items (Pending)</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            No items have been imported into memory yet. Go back to Bulk Import and upload a JSON file.
        </div>
    }
    else
    {
        <div class="mb-3">
            <a asp-action="Pending" asp-route-view="cards" class="btn btn-sm btn-outline-primary me-2">
                Card view
            </a>
            <a asp-action="Pending" asp-route-view="list" class="btn btn-sm btn-outline-secondary">
                List view
            </a>
        </div>

        @if (viewMode == "cards")
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-3">
                        @* Use the partial defined by the model (RestaurantCard or MenuItemCard) *@
                        @await Html.PartialAsync(item.GetCardPartial(), item)
                    </div>
                }
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Name / Title</th>
                        <th>Extra</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item is Restaurant r)
                        {
                            <tr>
                                <td>Restaurant</td>
                                <td>@r.Name</td>
                                <td>@r.Address</td>
                            </tr>
                        }
                        else if (item is MenuItem m)
                        {
                            <tr>
                                <td>Menu Item</td>
                                <td>@m.Title</td>
                                <td>@m.Price.ToString("0.00")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    }

    <div class="mt-3">
        <a asp-controller="BulkImport"
           asp-action="BulkImport"
           class="btn btn-secondary">
            Back to Bulk Import
        </a>
    </div>
</div>
